{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "OverlayCompanion": "Debug"
    }
  },
  "McpServer": {
    "ServerInfo": {
      "Name": "overlay-companion-mcp",
      "Version": "1.0.0",
      "Description": "General-purpose, human-in-the-loop AI-assisted screen interaction toolkit"
    }
  },
  "OverlayCompanion": {
    "DefaultMode": "Passive",
    "ScreenCapture": {
      "PreferredTools": ["grim", "gnome-screenshot", "spectacle", "scrot", "maim"],
      "DefaultTimeout": 5000,
      "TempDirectory": "/tmp"
    },
    "Input": {
      "PollingIntervalMs": 50,
      "DefaultTypingSpeedWpm": 60,
      "RequireConfirmationByDefault": true
    },
    "Overlay": {
      "DefaultColor": "Yellow",
      "DefaultSize": {
        "Width": 50,
        "Height": 50
      },
      "MaxOverlays": 100
    }
  }
}
